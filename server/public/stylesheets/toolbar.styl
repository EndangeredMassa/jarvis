#toolbar
  background    rgba(245, 245, 245, .75)
  border-radius 3px 3px 3px 3px
  position      fixed
  top           5px
  right         5px
  padding       5px 0 3px 5px

  a
    color          #999
    margin-right   5px
    display        inline-block
    vertical-align top
    line-height    30px
    white-space    nowrap

  iframe
    width  115px
    height 25px
