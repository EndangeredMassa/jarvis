#list
  background light-grey
  width 250px
  margin-left -250px
  padding-top 0
#info
  background dark-grey
  position fixed
  top 0
  width 250px
  height 45px
  margin-top 0
  padding 10px 0 small
  font-size 75%
  p
    color orange
    margin 0
    padding 6px 0 6px 10px
    float left
    span.unread
      color green
  button
    display none
    float right
    margin-right 5px
ul.items
  list-style none
  padding 0
  margin 50px 0 0
  li
    width 250px
    border-right 5px solid orange
    margin 5px 0
    background #fff
    font-size .8em
    &.unread
      border-right 5px solid green
      color dark-green
      a
        color dark-green
    &.selected
      background light-grey
      border-right 5px solid dark-grey
      a
        color dark-grey
    a
      display block
      text-decoration none
      color orange
      padding 5px 10px
      width 100%
      height 100%
    h4
      margin 0
      padding 0
    p
      margin 0
      padding 0
#list_footer
  position fixed
  bottom 0
  background green
  height 45px
  width 250px
  p
    color white
    font-size 85%
    text-align: center
    // text-transform uppercase
    margin-bottom 10px